{
    "id": 1,
    "uid": "rutafem-backend",
    "title": "RutaFem Backend Monitoring",
    "tags": ["prometheus", "backend", "rutafem"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
        {
            "id": 1,
            "title": "HTTP p95 Latency par Route (ms)",
            "type": "timeseries",
            "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
            "targets": [
                {
                    "expr": "1000 * histogram_quantile(0.95, sum by (le, route, method) (rate(rutafem_http_request_duration_seconds_bucket[5m])))",
                    "legendFormat": "{{method}} {{route}}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "ms",
                    "custom": {}
                }
            }
        },
        {
            "id": 2,
            "title": "RPS (Requests Per Second) par Route",
            "type": "timeseries",
            "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
            "targets": [
                {
                    "expr": "sum by (route, method) (rate(rutafem_http_request_duration_seconds_count[1m]))",
                    "legendFormat": "{{method}} {{route}}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "reqps",
                    "custom": {}
                }
            }
        },
        {
            "id": 3,
            "title": "Taux d'erreurs 5xx (%)",
            "type": "timeseries",
            "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
            "targets": [
                {
                    "expr": "100 * (sum(rate(rutafem_http_request_duration_seconds_count{status_code=~\"5..\"}[5m])) / sum(rate(rutafem_http_request_duration_seconds_count[5m])))",
                    "legendFormat": "5xx Rate",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "custom": {}
                }
            }
        },
        {
            "id": 4,
            "title": "RequÃªtes HTTP totales par statut",
            "type": "timeseries",
            "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
            "targets": [
                {
                    "expr": "sum(rate(rutafem_http_request_duration_seconds_count[1m])) by (status_code)",
                    "legendFormat": "{{status_code}}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "reqps",
                    "custom": {}
                }
            }
        },
        {
            "id": 5,
            "title": "Latence p50 vs p95 vs p99 (ms)",
            "type": "timeseries",
            "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
            "targets": [
                {
                    "expr": "1000 * histogram_quantile(0.50, sum by (le, route, method) (rate(rutafem_http_request_duration_seconds_bucket[5m])))",
                    "legendFormat": "p50 {{method}} {{route}}",
                    "refId": "A"
                },
                {
                    "expr": "1000 * histogram_quantile(0.95, sum by (le, route, method) (rate(rutafem_http_request_duration_seconds_bucket[5m])))",
                    "legendFormat": "p95 {{method}} {{route}}",
                    "refId": "B"
                },
                {
                    "expr": "1000 * histogram_quantile(0.99, sum by (le, route, method) (rate(rutafem_http_request_duration_seconds_bucket[5m])))",
                    "legendFormat": "p99 {{method}} {{route}}",
                    "refId": "C"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "ms",
                    "custom": {}
                }
            }
        }
    ]
}
